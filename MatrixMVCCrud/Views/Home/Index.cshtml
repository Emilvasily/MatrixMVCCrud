@using MatrixMVCCrud.Models.EntityFramework;
@model  IEnumerable<Employee>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container">
    <a class="btn btn-primary" style="margin-bottom:10px" href="@Url.Action("NewEmployee","Home")">NEW</a>
    <table class="table table-striped table-bordered table-hover" id="employeeTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Created_Date</th>
                <th>Update,Delete,Read</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td>@(item.Gender == 1 ? "Man" : "Woman")</td>
                <td>@item.Address</td>
                <td>@Convert.ToDateTime(item.Created_Date).ToShortDateString()</td>
                <td>
                    <div class="hidden-sm hidden-xs btn-group">
                    <a class="btn btn-xs btn-info" href="~/Home/EditEmployee/@item.ID">
                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                   </a>
                    <a class="btn btn-xs btn-danger tblOilChangeDelete" data-id="@item.ID" id="employeeDelete"> @*href="@Url.Action("DeleteCustomer","Home",new { id=item.ID})"*@
                        <i class="ace-icon fa fa-trash-o bigger-120"></i>
                    </a>
                    <a class="btn btn-xs btn-success" id="showService">
                        <i class="ace-icon fa fa-eye bigger-120"></i>
                    </a>
                    </div>
                </td>

            </tr>

            }

        </tbody>
    </table>
</div>



